<html>
    <head>
        <title>Login e Cadastro</title>
        <link rel="stylesheet" href="/login.css"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">  
    </head>
    <body class="d-flex align-items-center justify-content-center vh-100 bg-light">
        <div class="d-flex shadow rounded-3 overflow-hidden" style="width: 800px;">
            <!-- Área de Login -->
            <div class="col-5 bg-primary text-white d-flex flex-column justify-content-center align-items-center p-4">
                <img src="https://i.ibb.co/sdjhKDvW/logo-branco.png" alt="Logo da Empresa" class="mb-3" style="width: 80px; height: auto;">
                <h2 class="fw-bold">Bem-Vindo de volta</h2>
            </div>

            <!-- Área de Cadastro -->
            <div class="col-7 bg-white p-5">
                <h2 class="text-primary fw-bold text-center mb-4">Login</h2>
                <form action='/register' method="post">
                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email" name="email" class="form-control" placeholder="Email" required>
                    </div>

                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" name="password" class="form-control" placeholder="Senha" required>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">ENTRAR</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>



